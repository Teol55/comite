{% extends 'comite_admin/admin.html.twig' %}





{% block content_body %}
    <a href="{{ path('admin_article_new') }}" class="btn btn-primary pull-right">
        Nouveau  <span class="fa fa-plus-circle"></span>
    </a>

    <h1> OUTILS</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Non</th>
            <th>Déscription</th>
            <th>Prix à la semaine</th>
            <th>Modifier</th>
        </tr>
        </thead>
        <tbody>
        {% for tool in tools %}
            <tr>
                <td>{{ tool.name }}</td>
                <td>{{ tool.description }}</td>
                <td>{{ tool.price  }}€</td>
                <td>
                    <a href="{{ path('admin_tool_edit', {
                        id: tool.id
                    }) }}">
                        <span class="fa fa-pencil"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
